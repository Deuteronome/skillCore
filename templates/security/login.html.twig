{% extends 'base.html.twig' %}



{% block main %}

    <div class="row p-3 p-lg-5 justify-content-between">
        <div class="col-12 col-lg-5 p-3 box-custom">
            <form method="post">
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                {% if app.user %}
                    <div class="mb-3">
                        You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
                    </div>
                {% endif %}

                <h2 class="h3 mb-3 font-weight-normal border-bottom border-dark">Connectez vous</h2>
                <label for="username">Adresse Mail</label>
                <input type="email" value="{{ last_username }}" name="_username" id="username" class="form-control mb-2" autocomplete="email" required autofocus>
                <label for="password">Mot de passe</label>
                <input type="password" name="_password" id="password" class="form-control" autocomplete="current-password" required>

                <input type="hidden" name="_csrf_token"
                    value="{{ csrf_token('authenticate') }}"
                >

                {#
                    Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                    See https://symfony.com/doc/current/security/remember_me.html

                    <div class="checkbox mb-3">
                        <input type="checkbox" name="_remember_me" id="_remember_me">
                        <label for="_remember_me">Remember me</label>
                    </div>
                #}
                <div class="row align-items-end">
                    <button class=" col-5  text-center btn btn-sec-custom ms-2 mt-3" type="submit">
                        connexion
                    </button>

                    <a href="{{ path('app_forgotten_password')}}" class="col-6  text-center btn btn-sm btn-sec-custom ms-1 ms-lg-3">
                        Mot de passe oubli√©
                    </a>
                </div>
                
            </form>
        </div>
    </div>
    
{% endblock %}
